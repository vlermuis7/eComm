@using System.Globalization
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Cart Page</h3>
<table class="table table-bordered table-striped" style="width:100%">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">Remove</a></td>
                <td>@item.Product.Id</td>
                <td>@item.Product.Name</td>
                <td><img src="~/images/@item.Product.Photo" width="60" /> </td>
                <td>@item.Product.Price.ToString("C", CultureInfo.CurrentCulture)</td>
                <td>@item.Quantity</td>
                <td>@((item.Product.Price * item.Quantity).ToString("C", CultureInfo.CurrentCulture))</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @ViewBag.total.ToString("C", CultureInfo.CurrentCulture)
            </td>
        </tr>
    </table>
    <br>
    <a asp-controller="product" asp-action="index">Continue Shopping</a>

    <div align="right">
    <a asp-controller="cart" asp-action="addToCart">Buy Now</a>
    </div>

</body>
</html>
